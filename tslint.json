{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "jsx-no-lambda": false,
        "max-line-length": [true, 160],
        "trailing-comma": false,
        "ter-indent": [
            true,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "variable-name": false,
        "jsx-alignment": true,
        "jsx-equals-spacing": [true, "never"],
        "jsx-no-string-ref": true,
        "jsx-self-close": true
    },
    "rulesDirectory": []
}
